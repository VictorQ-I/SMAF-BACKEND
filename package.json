{
  "name": "smaf-nodejs-backend",
  "version": "1.0.0",
  "description": "SMAF - Sistema Motor Anti-Fraude Backend API",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "swagger": "node src/app-swagger.js",
    "swagger:dev": "nodemon src/app-swagger.js",
    "db:init": "node src/scripts/initDb.js",
    "db:create-tables": "node src/scripts/createFraudRulesTables.js",
    "db:rollback-tables": "node src/scripts/rollbackFraudRulesTables.js",
    "db:seed-rules": "node src/scripts/seedFraudRules.js",
    "db:verify": "node src/scripts/verifySetup.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit/ tests/integration/",
    "test:all": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch tests/unit/ tests/integration/",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage tests/unit/",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit/",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest tests/integration/",
    "test:models": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit/models/",
    "test:services": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit/services/",
    "test:controllers": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit/controllers/",
    "test:middleware": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit/middleware/",
    "test:validators": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit/validators/",
    "test:working": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit/utils.test.js tests/unit/fraudDetection.test.js tests/unit/models/Transaction.simple.test.js tests/unit/services/fraudDetection.simple.test.js tests/unit/services/transactions.simple.test.js tests/unit/controllers/transaction.simple.test.js tests/unit/validators/validation.simple.test.js tests/integration/health.test.js tests/integration/auth.test.js",
    "test:stable": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit/utils.test.js tests/unit/fraudDetection.test.js tests/unit/models/Transaction.simple.test.js tests/unit/services/fraudDetection.simple.test.js tests/unit/services/transactions.simple.test.js tests/unit/controllers/transaction.simple.test.js tests/unit/validators/validation.simple.test.js tests/integration/health.test.js tests/integration/auth.test.js",
    "test:simple": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit/**/*.simple.test.js",
    "test:basic": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit/utils.test.js tests/unit/fraudDetection.test.js",
    "test:coverage:working": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage tests/unit/utils.test.js tests/unit/fraudDetection.test.js tests/unit/**/*.simple.test.js",
    "test:coverage:html": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --coverageReporters=html tests/unit/utils.test.js tests/unit/fraudDetection.test.js tests/unit/**/*.simple.test.js",
    "test:serve": "echo 'Abre coverage/lcov-report/index.html en tu navegador para ver el reporte de cobertura'",
    "test:report": "node scripts/generate-test-report.js",
    "test:dashboard": "node scripts/create-test-dashboard.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "db:reset": "sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate && sequelize-cli db:seed:all"
  },
  "keywords": [
    "anti-fraud",
    "nodejs",
    "express",
    "sequelize",
    "mysql"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.8.0",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4"
  }
}